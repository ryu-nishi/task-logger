{
  "manifest_version": 3,
  "name": "Task Logger",
  "version": "1.1",
  "description": "シンプルなタスク記録・集計ツール。割り込みやプロジェクト作業をワンクリックで記録します。",
  "permissions": [
    "storage",
    "downloads"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
